<center><h1>Update Status</h1></center>
<form class="form" asp-action="UpdateStatus" method="post" asp-controller="Consignment">
    <div class="form-group">
        <label for="Consignment number">Consignment No</label>
        <input type="text" name="no" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="Consignment status">Status</label>
        <select name="status" class="form-control">
            <option value="Out For delivery">Out For Delivery</option>
            <option value="Connecting Hub">Connecting Hub</option>
            <option value="Dispatched">Dispatched</option>
            <option value="Delivered">Delivered</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Update Status" />
    </div>
    <div class="form-group">
        <a class="btn btn-primary" asp-controller="Employee" asp-action="Index">Home</a>
    </div>
</form>